pkgbase=python3-linuxdoc
pkgname=("${MINGW_PACKAGE_PREFIX}-python3-linuxdoc")
pkgver=0.0.1
pkgrel=1
pkgdesc="module to parse kerneldoc syntax comment and generate doc in sphinx"
makedepends=("${MINGW_PACKAGE_PREFIX}-python3-setuptools")
license=('GPL2')
arch=('x86_64')
url="https://intranet.mindmaze.ch/mmlabs/gerrit/admin/projects/mmlib"
source=(git+ssh://intranet.mindmaze.ch:29418/linuxdoc#branch=master)
sha256sums=(SKIP)


package() {
	depends=("${MINGW_PACKAGE_PREFIX}-python3-sphinx")

	cd linuxdoc
	MSYS2_ARG_CONV_EXCL="--prefix=;--install-scripts=;--install-platlib=" \
	${MINGW_PREFIX}/bin/python3 setup.py install --prefix=${MINGW_PREFIX} --root="${pkgdir}" --optimize=1
}
